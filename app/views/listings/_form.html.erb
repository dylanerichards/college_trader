<%= form_for [@category, @listing] do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  </br>

  <div class="field">
    <%= f.label :is_sell, 'Buy/Sell' %><br>
    <%= f.select :is_sell, [['Sell', true], ['Buy', false]] %>
  </div>

  </br>

  <div class="field">
    <%= f.label :price_negotiable, 'Price negotiable?' %><br>
    <%= f.select :price_negotiable, [['Yes', true], ['No', false]] %>
  </div>

  </br>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 8 %>
  </div>

  </br>

  <div class="actions">
    <%= f.submit nil, class: 'listingSubmitButton' %>
  </div>
<% end %>
