<h1>Listing listings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.description %></td>
        <td><%= link_to 'Show', category_listing_path(@category, listing) %></td>
        <td><%= link_to 'Edit', edit_category_listing_path(@category, listing) %></td>
        <td><%= link_to 'Destroy', category_listing_path(@category, listing), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_category_listing_path %>
